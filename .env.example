# ===========================================
# TenderMatch Production Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/tendermatch
PGHOST=localhost
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=tendermatch

# ===========================================
# Session Configuration (REQUIRED)
# ===========================================
# Generate a secure random string (min 32 characters)
# Example: openssl rand -base64 32
SESSION_SECRET=your-super-secure-session-secret-min-32-chars

# ===========================================
# Admin Authentication (REQUIRED for production)
# ===========================================
# Admin username (default: admin)
ADMIN_USERNAME=admin

# Admin password hash (bcrypt) - REQUIRED for production!
# Generate with: node scripts/generate-password-hash.js your-secure-password
# Example hash for "admin123": $2b$12$...
ADMIN_PASSWORD_HASH=

# For development only, you can use plain password instead of hash
# DO NOT use this in production!
# ADMIN_PASSWORD=your-dev-password

# Admin email address
ADMIN_EMAIL=admin@yourdomain.com

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production
PORT=5000

# ===========================================
# Optional: Reverse Proxy Settings
# ===========================================
# Set to 1 if behind nginx/apache/cloudflare
# TRUST_PROXY=1
