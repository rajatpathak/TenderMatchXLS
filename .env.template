# ===========================================
# TenderMatch Environment Configuration
# ===========================================
# Fill in these values on your server
# NEVER commit this file with real credentials!

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://YOUR_DB_USER:YOUR_DB_PASSWORD@localhost:5432/tendermatch
PGHOST=localhost
PGPORT=5432
PGUSER=YOUR_DB_USER
PGPASSWORD=YOUR_DB_PASSWORD
PGDATABASE=tendermatch

# ===========================================
# Session Configuration (REQUIRED)
# ===========================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=GENERATE_A_32_CHAR_RANDOM_STRING_HERE

# ===========================================
# Admin Authentication
# ===========================================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com

# Generate password hash with: node scripts/generate-password-hash.js your-password
# Then paste the bcrypt hash below
ADMIN_PASSWORD_HASH=PASTE_YOUR_BCRYPT_HASH_HERE

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production
PORT=5000
