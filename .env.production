# Production Environment Template
# Copy this to .env and fill in your actual values

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/tendermatch
PGHOST=localhost
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=tendermatch

# ===========================================
# Session Configuration (REQUIRED)
# ===========================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-super-secure-session-secret-min-32-chars

# ===========================================
# Admin Authentication (REQUIRED)
# ===========================================
ADMIN_USERNAME=admin
# Generate with: node scripts/generate-password-hash.js your-secure-password
ADMIN_PASSWORD_HASH=
ADMIN_EMAIL=admin@yourdomain.com

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production
PORT=5000

# ===========================================
# Security Settings
# ===========================================
# Set to 1 if behind reverse proxy
TRUST_PROXY=1

# Only set to true for HTTP-only deployments (NOT recommended)
# DISABLE_SECURE_COOKIES=false